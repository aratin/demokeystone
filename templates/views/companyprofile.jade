extends ../layouts/default
block content
    header
      include ../views/navbar
      include ../views/menu
     section
      #inner-banner
      #inner-content-box#content-box
        .container
          #offerings
            .col-md-9.text-right
              ul.list-inline
                li
                  a(href="#",onclick="printFunction()")
                    i.fa.fa-lg.fa-print
                li
                  a#pdf
                    i.fa.fa-lg.fa-file-pdf-o
                li
                  a(href="#")
                    i.fa.fa-lg.fa-envelope
            .col-md-9
              .row
                .col-md-4
                  if data.companyprofiles.length
                      if data.companyprofiles[0].image.exists
                          img(id="image",src=data.companyprofiles[0]._.image.limit(640,640))
                .col-md-8
                    p
                      | #{data.companyprofiles[0].companyProfiletext}
                    p
                      | #{data.companyprofiles[0].companyProfilesubtext}
                    p
                      | #{data.companyprofiles[0].companyProfileshortstring}
                    p
                      | #{data.companyprofiles[0].companyProfilelongstring}
                    p
                      | #{data.companyprofiles[0].companyProfilesubstring}
                    p
                      | #{data.companyprofiles[0].companyProfilesubstringtext}
            include ../views/companyinfolistmenu
      .container-fluid
        .row
          footer
            include ../views/footer
            